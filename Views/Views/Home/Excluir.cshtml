@model Views.Models.Usuario
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css" />
    <title>Cadastro De Usuario</title>
</head>
<body>
    <div class="container">
        <h1 class="text-primary">Cadastro de Usuario.</h1>
        <hr />
        <h4>Deseja realmente excluir o usuário</h4>
        <form method="POST" class="w-25">
            <input type="hidden" asp-for="IdUsuario" />
            <div class="mt-3">
                <a asp-action="Usuarios" class="btn btn-sucess">Não</a>
                <button class="btn btn-danger" type="submit">Sim</button>
            </div>
        </form>
    </div>
</body>
</html>